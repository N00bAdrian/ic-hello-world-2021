<%- include('header') -%>

<style>
    .container-fluid {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        /* this adds the "card" effect */
        padding: 16px;
        border-radius: 10px;
        height: inherit;
        margin: 30px auto;
    }
</style>

        <div class="container"><div class="container-fluid">
            <div class="card border-primary shadow">
                <div class="card-header"><h2>User profile</h1></div>
                <div class="row g-0">
                    <div class="col-md-4">
                        <img style="max-height: 300px;" src="/images/cook.jpg">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= username %></h5>
                            <p class="card-text">
                                Preferences:
                                <ul>
                                    <% for(var i=0; i<preferences.length; i++) { %>
                                        <li><%= preferences[i] %> </li>
                                    <% } %>
                                </ul>
                            </p>
                        </div>
                    </div>
                </div>
            </div>  

            <% if(typeof rows != 'undefined') { %>
                <% rows.forEach((row) => { %>
                    <div class="card">
                        <h5 class="card-title"><%= row.recipe %> </h5>
                        <p class="card-text"><%= row.description %> </p>
                        <% if(row.active == 1) { %>
                            <a href="/cook/session/<%= row.rid %> ">Go</a>
                        <% } %> 
                    </div>
                <% }); %> 
            <% } %>
        </div></div>
    </body>

    <%- include('footer'); -%>
</html>