<style>
  section {
    position: relative;
    width: 100%;
    height: 60vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  section img {

    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;

  }
  section h2 {
    position: relative;
    color: rgb(0, 0, 0);
    font-size = 12em;
  }
</style>

<section>
  <img src="/images/1.png" class="layer" data-speed="-6" />
  <img src="/images/2.png" class="layer" data-speed="5" />
  <img src="/images/3.png" class="layer" data-speed="2" />
  <img src="/images/4.png" class="layer" data-speed="6" />
  <img src="/images/5.png" class="layer" data-speed="8" />
  <img src="/images/6.png" class="layer" data-speed="-1" />
  <img src="/images/7.png" class="layer" data-speed="4" />
  <img src="/images/8.png" class="layer" data-speed="-9" />
  <img src="/images/9.png" class="layer" data-speed="6" />
  <img src="/images/10.png" class="layer" data-speed="10" />
  <img src="/images/11.png" class="layer" data-speed="-7" />
  <img src="/images/12.png" class="layer" data-speed="-3" />
  <h2 class="layer" data-speed="0">
    We know you love food. Build friendships on the way!
  </h2>
</section>

<script type="text/javascript">
  document.addEventListener("mousemove", parallax);

  function parallax(e) {
    this.querySelectorAll(".layer").forEach((layer) => {
      const speed = layer.getAttribute("data-speed");
      const x = (e.pageX * speed) / 250;
      const y = (e.pageY * speed) / 250;
      layer.style.transform = `translateX(${x}px) translateY(${y}px)`;
    });
  }
</script>

